                            <ListView Name="listview1" Height="181" Margin="0,96,17.333,0" VerticalAlignment="Top" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right" Width="306" Grid.Column="1">
                                <ListView.View >
                                    <GridView >
                                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding Name}"  Header="Name" />
                                        <GridViewColumn Width="100" Header="Quantity" />

                                    </GridView>
                                </ListView.View>


                            </ListView>
                            <ListView Name="listview2" HorizontalAlignment="Left" Height="184" Margin="10,96,0,0" VerticalAlignment="Top" Width="316" FontSize="12" FontWeight="Bold" Grid.ColumnSpan="2">
                                <ListView.View >
                                    <GridView >
                                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding Name}"  Header="Name" />
                                        <GridViewColumn Width="100" Header="Quantity" />

