                <TreeView Name="tvMain" SelectedItemChanged="DooSomething" Margin="-204,0,0,-363" HorizontalAlignment="Left" Width="199" Height="507" VerticalAlignment="Top" >
                    <TreeViewItem 
       ItemsSource="{Binding Source={StaticResource SalesInfo}, XPath=*}"
     Header="SOADataMaster" />

                </TreeView>

            </Grid>
