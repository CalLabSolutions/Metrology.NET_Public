                    <TextBox KeyDown="OnKeyDownHandler" Name="fill"  materialDesign:HintAssist.Hint="Floating Hint" Height="30" TextWrapping="Wrap"  Width="150" Margin="413,39,-0.333,182.667">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding CmdSomething}" Key="Return" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <ComboBox Name="combo1"
                  IsEditable="True" Margin="0,39,412,176" Height="30" Width="150" >
