                </TabControl>
                <TreeView Background="#ffdcbc" Foreground="White" Name="tvMain" SelectedItemChanged="DooSomething" Margin="-207,274,0,-583" Height="453" VerticalAlignment="Top" HorizontalAlignment="Left" Width="217" />

            </Grid>
            <!-- <TextBox Name="txtFilePath" IsReadOnly="True"
                     Grid.Column="0" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,38,99.333,-38" />-->
