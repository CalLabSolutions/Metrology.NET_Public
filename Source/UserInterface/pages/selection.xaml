<Page x:Class="soa_1_03.pages.selection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:soa_1_03.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="500"
      Title="selection">

    <Grid Background="{DynamicResource scbPageBackColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Border Margin="40" BorderBrush="LightGray" BorderThickness="2" CornerRadius="5" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Vertical">
                <Button Name="btnNewSoa" Content="Create New SOA" Margin="20" Width="150" HorizontalAlignment="Left" Height="50" Click="btnNewSoa_Click"/>
                <Button Name="btnEditSoa" Content="Edit Existing SOA" Margin="20" Width="150" HorizontalAlignment="Left" Height="50"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
