                                </ListView.View>


                            </ListView>

                            <GroupBox Name="d_box" Header="Title" HorizontalAlignment="Left" Height="172" Margin="26,357,0,0" VerticalAlignment="Top" Width="627" Grid.ColumnSpan="2">
                                <TextBlock Name="d_text" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="601" Height="130" Margin="0,0,0,-9.333"/>
                            </GroupBox>


