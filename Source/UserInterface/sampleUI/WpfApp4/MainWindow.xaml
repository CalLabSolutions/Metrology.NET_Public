                </Grid>
                <TreeView Background="#3f51b5" Foreground="White" Name="tvMain" SelectedItemChanged="DooSomething" Margin="-204,0,0,-55" Height="199" VerticalAlignment="Top" HorizontalAlignment="Left" Width="199" />

            </Grid>
            <!-- <TextBox Name="txtFilePath" IsReadOnly="True"
                     Grid.Column="0" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,38,99.333,-38" />-->
            <!--<Button Margin="5.667,38,97.333,-38" Content="Browse..." 
                    Click="BrowseXmlFile" Grid.Column="1" Grid.ColumnSpan="2"/>-->

            <DockPanel Margin="0,0,0,-1" Grid.ColumnSpan="3">
                <Menu IsMainMenu="True" Height="26" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="868" RenderTransformOrigin="0.5,0.5" Margin="0,1,0,0" >
                    <Menu.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.006"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Menu.RenderTransform>
                    <MenuItem Height="27" Header="_File">
                        <MenuItem Click="BrowseXmlFile"  Header="Open" InputGestureText="Ctrl+O">

                        </MenuItem>
                        <MenuItem Header="Save As.." Click="SaveFile"/>
                        <MenuItem Header="Exit" InputGestureText="Ctrl+E">

                        </MenuItem>
                        <Separator />
                        <MenuItem Header="Excellent" IsCheckable="True" IsChecked="True" />
                        <MenuItem Header="Rubbish" IsCheckable="True" />
                        <MenuItem Header="Dig Deeper" InputGestureText="Ctrl+D">
                            <MenuItem Header="Enlightenment?" IsCheckable="True" />
                            <MenuItem Header="Disappointment" IsCheckable="True" />
                        </MenuItem>
                        <MenuItem Header="Look Deeper" InputGestureText="Ctrl+D">
                            <MenuItem Header="Plain" />
                            <MenuItem Header="Ice Cream" />
                        </MenuItem>
                    </MenuItem>

                    <MenuItem Header="_Edit " Height="27" />
                    <MenuItem Header="_View " Height="27" />
                    <MenuItem Header="_Help " Height="27"  />
                </Menu>

            </DockPanel>

        </Grid>
        <GroupBox Header="Company Info" HorizontalAlignment="Left" Margin="0,203.667,0,0" Grid.Row="2" Width="204" Height="342" VerticalAlignment="Top">

        </GroupBox>
        <TextBlock x:Name="id_box" HorizontalAlignment="Left" Margin="10,246.667,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="41" FontWeight="Bold"><Run Text="Name:"/><LineBreak/><Run/></TextBlock>
        <TextBox Name="name" HorizontalAlignment="Left" Height="23" Margin="10,266.667,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="191" Grid.Row="2"/>
        <TextBox Name="street" HorizontalAlignment="Left" Height="23" Margin="55,299.667,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" Grid.Row="2"/>
        <TextBox Name="city" HorizontalAlignment="Left" Height="23" Margin="55,327.667,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" Grid.Row="2"/>
        <TextBox Name="state" HorizontalAlignment="Left" Height="23" Margin="55,355.667,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" Grid.Row="2"/>
        <TextBox Name="zip" HorizontalAlignment="Left" Height="23" Margin="55,383.667,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" Grid.Row="2"/>

        <TextBlock x:Name="street_box" HorizontalAlignment="Left" Margin="10,306.667,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="41"><Run FontWeight="Bold" Text="Street:"/><LineBreak/><InlineUIContainer>
            </InlineUIContainer></TextBlock>
        <TextBlock x:Name="city_box" HorizontalAlignment="Left" Margin="10,337.667,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="41" FontWeight="Bold"><Run Text="City"/><Run Text=":"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="state_box" HorizontalAlignment="Left" Margin="10,365.667,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="41" FontWeight="Bold"><Run Text="State"/><Run Text=":"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="zip_box" HorizontalAlignment="Left" Margin="10,393.667,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="41" FontWeight="Bold"><Run Text="Zip"/><Run Text=":"/><LineBreak/><Run/></TextBlock>
