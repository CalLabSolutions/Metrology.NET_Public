<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="SoA XML Editor" Height="646" Width="900">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- note you only need bring in these extra resource dictionaries when using non-default styles, so only bring them into your controls where the default style is not what you want -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Slider.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
                <Setter Property="Margin" Value="0 8 0 8" />
            </Style>
            <Style TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource MaterialDesignPasswordBox}">
                <Setter Property="Margin" Value="0 8 0 8" />
            </Style>
            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MaterialDesignComboBox}">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Margin" Value="0 8 0 8" />
            </Style>
            <Style TargetType="{x:Type Viewbox}">
                <Setter Property="Width" Value="18" />
                <Setter Property="Height" Value="18" />
                <Setter Property="Margin" Value="0 0 8 0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="{x:Type Slider}" BasedOn="{StaticResource MaterialDesignSlider}">
                <Setter Property="Margin" Value="0 8 0 8" />
            </Style>





        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10,10,10.333,-0.333">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="3" Margin="206,32,0,-130">

                <!--Setting the ItemsSource to "{Binding}" causes the TreeViewto use the Grid's DataContext as its source, and thetemplates describe how each tag is to be displayed and
            handled, in case the node has descendent nodes. -->
                <Grid Margin="0,10,-1,-426" Height="560" VerticalAlignment="Top" HorizontalAlignment="Left" Width="663">

                    <TextBlock TextWrapping="Wrap" Text="Process Name" x:Name="process_name" FontSize="22" Margin="26,0,0,0" HorizontalAlignment="Left" Width="637" Height="56" VerticalAlignment="Top" Foreground="#FF3F51B5"><Run Text="Process"/><Run Text="h"/><Run Text=" "/><InlineUIContainer/><Run Text="Name"/><InlineUIContainer/></TextBlock>
                    <TextBox KeyDown="OnKeyDownHandler" Name="fill"  materialDesign:HintAssist.Hint="Floating Hint" Height="30" TextWrapping="Wrap"  Width="150" Margin="474,61,39,0" VerticalAlignment="Top">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding CmdSomething}" Key="Return" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <ComboBox Name="combo2" SelectionChanged="comboselection"
                  IsEditable="True" HorizontalContentAlignment="Stretch" Height="30" VerticalAlignment="Top" Margin="26,61,256,0"  >
                        <ComboBoxItem Content="Voltage"/>
                        <ComboBoxItem Content="Voltage1"/>

                    </ComboBox>
                    <TextBlock x:Name="source_voltage"  TextWrapping="Wrap" Text="" Margin="463,96,0,422" FontWeight="Bold" FontSize="16"/>
                    <Button Content="Save" HorizontalAlignment="Left" Margin="332,518,0,0" VerticalAlignment="Top" Width="75"/>
                    <CheckBox Content="Save to local library" HorizontalAlignment="Left" Margin="60,525,0,0" VerticalAlignment="Top"/>
                    <GroupBox Header="Results" HorizontalAlignment="Right" Height="172" Margin="0,157,367,0" VerticalAlignment="Top" Width="270"/>
                    <GroupBox Header="Parameters" HorizontalAlignment="Left" Height="172" Margin="354,157,0,0" VerticalAlignment="Top" Width="270"/>

                    <ListView Height="143" Margin="0,186,372,0" VerticalAlignment="Top" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right" Width="265">
                        <ListView.View >
                            <GridView >
                                <GridViewColumn Width="120" DisplayMemberBinding="{Binding Name}"  Header="Name" />
                                <GridViewColumn Width="100" Header="Quantity" />

                            </GridView>
                        </ListView.View>

                        <ListViewItem Width="241">
                            <ComboBox x:Name="Frequency"
                  IsEditable="True" Width="91"  VerticalAlignment="Top" Margin="0"  >
                                <ComboBoxItem Content="Frequency1"/>
                                <ComboBoxItem Content="Frequency2"/>
                                <ComboBoxItem Content="Frequency3"/>
                            </ComboBox>
                        </ListViewItem>
                        <ListViewItem  Width="241">
                            <ComboBox x:Name="Amplitude"
                  IsEditable="True" Width="91" Height="31"  Margin="0"  >
                                <ComboBoxItem Content="Voltage1"/>
                                <ComboBoxItem Content="Voltage2"/>
                                <ComboBoxItem Content="Voltage3"/>
                            </ComboBox>
                        </ListViewItem>
                    </ListView>
                    <ListView HorizontalAlignment="Left" Height="143" Margin="354,186,0,0" VerticalAlignment="Top" Width="270" FontSize="12" FontWeight="Bold">
                        <ListView.View >
                            <GridView >
                                <GridViewColumn Width="120" DisplayMemberBinding="{Binding Name}"  Header="Name" />
                                <GridViewColumn Width="100" Header="Quantity" />

                            </GridView>
                        </ListView.View>

                        <ListViewItem Width="241">
                            <ComboBox x:Name="Stimulus"
                  IsEditable="True" Width="91"  VerticalAlignment="Top" Margin="0"  >
                                <ComboBoxItem Content="Frequency1"/>
                                <ComboBoxItem Content="Frequency2"/>
                                <ComboBoxItem Content="Frequency3"/>
                            </ComboBox>
                        </ListViewItem>
                        <ListViewItem  Width="241">
                            <ComboBox x:Name="Range"
                  IsEditable="True" Width="91" Height="31"  Margin="0"  >
                                <ComboBoxItem Content="Voltage1"/>
                                <ComboBoxItem Content="Voltage2"/>
                                <ComboBoxItem Content="Voltage3"/>
                            </ComboBox>
                        </ListViewItem>
                    </ListView>
                    <GridSplitter HorizontalAlignment="Left" Height="560" VerticalAlignment="Top" Width="5"/>
                    <TextBlock HorizontalAlignment="Left" Margin="60,348,0,0" TextWrapping="Wrap" Text="Documentation" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                    <CheckBox Content="External URL:" HorizontalAlignment="Left" Margin="60,376,0,0" VerticalAlignment="Top" Width="107" />
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="182,371,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442"/>
                    <CheckBox Content="Imbedded XHTML Document" HorizontalAlignment="Left" Margin="60,399,0,0" VerticalAlignment="Top" Width="201"/>

